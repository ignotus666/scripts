#!/bin/sh

$HOME/scripts/misc/SMT_performance_on.sh &

# /home/daryl/audiorelay/opt/audiorelay/bin/AudioRelay &

pw-metadata -n settings 0 clock.force-quantum 48 &
pw-metadata -n settings 0 clock.force-rate 48000 &

