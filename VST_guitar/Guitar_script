pw-metadata -n settings 0 clock.force-quantum 512 &&

qpwgraph -d -n -m $HOME/qpwgraph_patchbays/Pipewire_guitar_THU.qpwgraph &&

sudo $HOME/scripts/misc/smt-manager.pl --online; sudo cpupower-gui pr Schedutil
