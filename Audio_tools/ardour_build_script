#!/bin/sh


if [ -d $HOME/ardour ]
then
    rm -rf $HOME/ardour
fi

cd $HOME

git clone https://github.com/Ardour/ardour.git

#sudo apt-get build-dep ardour
# except debian does not [yet] list libreadline as build-dependency
#sudo apt-get install libreadline-dev

cd ardour

./waf configure --optimize

./waf

